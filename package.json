{
  "name": "universal-fhevm-sdk-competition",
  "version": "1.0.0",
  "description": "Universal FHEVM SDK - Framework-agnostic toolkit for building confidential frontends",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build:sdk",
    "build:sdk": "npm run build --workspace=@zama/fhevm-sdk",
    "dev:nextjs": "npm run dev --workspace=nextjs-showcase",
    "dev:traffic": "npm run dev --workspace=traffic-violation-reporter",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "npm run type-check --workspaces",
    "test": "npm run test --workspaces",
    "ci": "npm run lint && npm run type-check && npm run test && npm run build"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "encryption",
    "privacy",
    "zama",
    "sdk",
    "competition"
  ],
  "author": "Competition Submission",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0"
  }
}
